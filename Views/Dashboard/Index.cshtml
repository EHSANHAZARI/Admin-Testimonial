@model List<ApplicantTestimonial>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<!------ Include the above in your HEAD tag ---------->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TS</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />    
    @* You can Use dashboard.css to apply your css or you can style here in this code  *@
</head>

<div>


<header class="headerColor">
        <partial name="~/Views/Dashboard/header.cshtml" />
</header>
         



<body class="home">
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="navi">
                    <ul>
                            <li class="">
                                <a asp-controller="Dashboard" asp-action="Index">
                                    <i class="fa fa-tasks" aria-hidden="true"></i>
                                    <span class="hidden-xs hidden-sm">Home</span>
                                </a>
                            </li>
                            <li id="edit" class=""><a  href="/edit"><i class="fa fa-tasks" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Edit</span></a></li>
                            <li class="">
                                <a asp-controller="Dashboard" asp-action="Testimonial" id="testimonialLink" onclick="redirectToTestimonial()">
                                    <i class="fa fa-tasks" aria-hidden="true"></i>
                                    <span class="hidden-xs hidden-sm">Testimonial</span>
                                </a>
                            </li>

                                @if (User.IsInRole("Admin"))
                                {
                                var user = User.IsInRole("Admin");
                                <li class="">
                                        <a asp-controller="Dashboard" asp-action="AdminApproval">
                                            <i class="fa fa-tasks" aria-hidden="true"></i>
                                            <span class="">Admin Approval</span>
                                        </a>
                                    </li>
                                }
                
                            <li class=""><a href="/setting"><i class="fa fa-cog" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Setting</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">

                    @if (Model != null && Model.Any(t => t.IsApprove))
                    {
                        <div>
                            <ul>
                                @foreach (var testimonial in Model)
                                {
                                    @if (testimonial.IsApprove)
                                    {
                                        
                                        <li>
                                            <strong>Title:</strong> @testimonial.Testimonial<br />
                                            <strong>Description:</strong> @testimonial.Description<br />
                                            <hr />
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                @* If the current page is equal to 1 disable the previouse button  *@
                                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">  
                                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize })">Previous</a>
                                </li>
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                                    </li>
                                }
                                @* If the current page is equal to total pages disable the next button  *@

                                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize })">Next</a>
                                </li>
                            </ul>
                        </nav>


                    }
                    else
                    {
                        <p>No approved testimonials available.</p>
                    }
                   
            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/" asp-append-version="true"></script>
</body>
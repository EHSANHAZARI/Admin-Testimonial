<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TS</title>
    <link rel="stylesheet" href="~/css/testimonial.css" />
</head>

<div class="container-fluid px-5 my-5">
    <form id="TestimonialForm" data-sb-form-api-token="API_TOKEN" asp-controller="Dashboard" asp-action="SaveTestimonial">

        <!-- Title Input -->
        <div class="form-floating mb-3">
            <input class="form-control" id="title" name="model.Testimonial" type="text" placeholder="title" data-sb-validations="required" />
            <label for="name">Title</label>
            <div class="invalid-feedback" data-sb-feedback="name:required">title is required.</div>
        </div>

        <!-- Message Input -->
        <div class="form-floating mb-3">
            <textarea class="form-control" id="description" name="model.Description" type="text" placeholder="" style="height: 10rem;" data-sb-validations="required"></textarea>
            <label for="message">Description</label>
            <div class="invalid-feedback" data-sb-feedback="description:required">description is required.</div>
        </div>
        <!-- Submit button -->
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button>
        </div>
    </form>
    <!-- End of contact form -->
</div>

<!-- CDN Link to SB Forms Scripts -->
<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>

